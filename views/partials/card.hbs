<div class="bg-white shadow-md rounded-lg p-4 mb-4">
        <div class="flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-800"><a href="/tasks/{{_id}}">{{name}}</a></h3>
            <span class="text-sm text-gray-500">{{due_date}}</span>
        </div>
        <div class="flex justify-between items-center mt-2">
            <span class="px-2 py-1 bg-blue-100 text-blue-600 text-xs font-medium rounded">{{type}}</span>
            <span class="px-2 py-1 text-xs font-medium rounded {{#if (eq status 'done')}}bg-green-100 text-green-600{{else}}bg-red-100 text-red-600{{/if}}">
                {{status}}
            </span>
        </div>
</div>